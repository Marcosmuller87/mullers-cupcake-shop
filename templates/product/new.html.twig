{% extends 'base.html.twig' %}

{% block title %}Novo Produto - Muller's Cupcake Shop{% endblock %}

{% block stylesheets %}
<style>
    .edit-container {
        padding: 2rem 0;
    }

    .form-container {
        background: white;
        border-radius: 10px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        padding: 2rem;
        margin-top: 2rem;
        max-width: 800px;
        margin: 2rem auto;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        color: var(--primary-color);
        font-weight: bold;
        display: block;
        margin-bottom: 0.5rem;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 0.8rem;
        border: 1px solid var(--secondary-color);
        border-radius: 25px;
        font-size: 1rem;
    }

    .price-input {
        position: relative;
    }

    .price-input::before {
        content: 'R$';
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-color);
    }

    .price-input input {
        padding-left: 35px;
    }

    .image-upload {
        margin-bottom: 1.5rem;
    }

    .image-upload label {
        display: block;
        color: var(--primary-color);
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .image-preview {
        margin-top: 1rem;
        width: 200px;
        height: 200px;
        border: 2px dashed var(--secondary-color);
        border-radius: 10px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
    }

    .image-preview img {
        max-width: 100%;
        max-height: 100%;
        object-fit: cover;
        display: none;
    }

    .preview-placeholder {
        color: var(--text-color);
        font-size: 0.9rem;
        text-align: center;
        padding: 1rem;
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 2rem;
    }

    .back-link {
        color: var(--text-color);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .back-link:hover {
        color: var(--primary-color);
        transform: translateX(-5px);
    }

    .save-button {
        padding: 0.8rem 2rem;
        background-color: var(--primary-color);
        color: white;
        border: none;
        border-radius: 25px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .save-button:hover {
        background-color: var(--accent-color);
        transform: translateY(-2px);
    }
</style>
{% endblock %}

{% block body %}
    {% include 'partials/_header.html.twig' with {
        title: 'Novo Produto'
    } %}

    <div class="container edit-container">
        <div class="form-container">
            {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name, 'Nome do Produto') }}
                    {{ form_widget(form.name, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Digite o nome do cupcake'
                        }
                    }) }}
                    {{ form_errors(form.name) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.description, 'Descrição') }}
                    {{ form_widget(form.description, {
                        'attr': {
                            'class': 'form-control',
                            'placeholder': 'Descreva os detalhes do cupcake'
                        }
                    }) }}
                    {{ form_errors(form.description) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.price, 'Preço') }}
                    <div class="price-input">
                        {{ form_widget(form.price, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': '0.00'
                            }
                        }) }}
                    </div>
                    {{ form_errors(form.price) }}
                </div>

                <div class="image-upload">
                    {{ form_label(form.imageFile, 'Imagem do Produto') }}
                    {{ form_widget(form.imageFile, {
                        'attr': {
                            'class': 'form-control',
                            'accept': 'image/*'
                        }
                    }) }}
                    {{ form_errors(form.imageFile) }}
                    
                    <div class="image-preview">
                        <img id="imagePreview" src="#" alt="Preview">
                        <div id="previewPlaceholder" class="preview-placeholder">
                            Selecione uma imagem para visualizar
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <a href="{{ path('product_index') }}" class="back-link">
                        ← Voltar à lista de produtos
                    </a>
                    <button type="submit" class="save-button">
                        Salvar Produto
                    </button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const imageInput = document.querySelector('input[type="file"]');
        const preview = document.getElementById('imagePreview');
        const placeholder = document.getElementById('previewPlaceholder');

        if (imageInput) {
            imageInput.addEventListener('change', function() {
                const file = this.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        preview.src = e.target.result;
                        preview.style.display = 'block';
                        placeholder.style.display = 'none';
                    }
                    reader.readAsDataURL(file);
                } else {
                    preview.style.display = 'none';
                    placeholder.style.display = 'block';
                }
            });
        }
    });
</script>
{% endblock %}